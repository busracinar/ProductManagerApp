@model IEnumerable<ProductApp.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-lg-auto">
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid" src="~/images/pic1.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="~/images/pic1.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="~/images/pic1.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        @{
                            if (!String.IsNullOrEmpty(item.Image))
                            {
                                <a href="#"><img class="card-img-top" width="250" height="300" src="/images/@item.Image" alt=""></a>
                            }
                            else
                            {
                                <a href="#"><img class="card-img-top" width="250" height="300" src="~/images/noimage.png" alt=""></a>
                            }
                        }
                    <div class="card-body">
                        @if (item.Stock > 0)
                        {
                            <span class="badge badge-success float-right">Stokta Var</span>
                        }
                        else
                        {
                            <span class="badge badge-danger float-right">Tükendi</span>
                        }
                        <br />
                        @if (item.ProductName.Length > 20)
                        {
                            <h5 class="card-title">@item.ProductName.Substring(0, 17)...</h5>
                        }
                        else
                        {
                            <h5 class="card-title">@item.ProductName</h5>
                        }
                        @if (item.Desciription.Length > 80)
                        {
                            <p class="card-text">@item.Desciription.Substring(0, 77)...</p>
                        }
                        else
                        {
                            <p class="card-text">@item.Desciription</p>
                        }
                        <h4>@item.Price.00 ₺</h4>
                        <a href="/Product/CustomerProductDetail/@item.Id" class="btn btn-primary btn-sm float-sm-right">Ürünü İncele</a>
                    </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
